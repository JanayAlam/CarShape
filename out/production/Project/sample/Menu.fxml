<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MenuController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Image/MenuBG.png" />
         </image>
      </ImageView>
      <Button fx:id="buttonNewGame" layoutX="72.0" layoutY="249.0" mnemonicParsing="false" onAction="#setNewGame" prefHeight="45.0" prefWidth="250.0" text="New Game">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="labelControlKeys" layoutX="72.0" layoutY="304.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="250.0" text="Control Keys">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="buttonCredits" layoutX="72.0" layoutY="359.0" mnemonicParsing="false" onAction="#setCredits" prefHeight="45.0" prefWidth="250.0" text="Credits">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="buttonExit" layoutX="72.0" layoutY="414.0" mnemonicParsing="false" onAction="#setButtonExit" prefHeight="45.0" prefWidth="250.0" text="EXIT">
         <font>
            <Font size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="72.0" layoutY="162.0" text="SHAPEcars">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Label>
      <Label fx:id="labelWelcome" layoutX="72.0" layoutY="229.0" text="Welcome, Alam" textAlignment="RIGHT" />
   </children>
</AnchorPane>
